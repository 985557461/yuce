<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#F1EDEE"
              android:orientation="vertical">

    <include
            android:id="@+id/layout_header"
            layout="@layout/layout_header"/>

    <com.example.YuCeClient.widget.photo.LoadingWrapperLinear
            android:id="@+id/photo_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <GridView
                android:id="@+id/photo_gridview"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:cacheColorHint="@android:color/transparent"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:paddingLeft="@dimen/photo_activity_space"
                android:paddingBottom="@dimen/photo_activity_space"
                android:paddingRight="@dimen/photo_activity_space"
                android:paddingTop="@dimen/photo_activity_space"
                android:verticalSpacing="@dimen/photo_activity_space"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#b2b2b2"/>
        <LinearLayout
                android:id="@+id/photo_control"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="#f1f1f1"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/photo_preview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="预览"
                    android:textColor="#ff6666"
                    android:textSize="20sp"/>
            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/photo_ok"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="发送"
                        android:gravity="center"
                        android:textColor="#ff6666"
                        android:textSize="20sp"/>
                <TextView
                        android:id="@+id/photo_count"
                        android:layout_width="19dip"
                        android:layout_height="19dip"
                        android:layout_gravity="top|right"
                        android:layout_marginRight="50dip"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/icon_red_dot"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="#ffffff"/>
            </FrameLayout>
        </LinearLayout>
    </com.example.YuCeClient.widget.photo.LoadingWrapperLinear>
</LinearLayout>