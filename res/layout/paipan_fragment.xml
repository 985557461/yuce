<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_white">
    <TextView android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="排盘"
              android:gravity="center"
              android:background="#9a1f22"
              android:textSize="17sp"
              android:textColor="@color/common_white"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:src="@drawable/home_top_image"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="22dp"/>
            <!--选时间-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                <TextView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_stroken_white_bg_shape"
                        android:id="@+id/timeTextView"
                        android:text="选择"
                        android:textColor="@color/common_black"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_marginRight="10dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/gray_stroken_white_bg_shape">
                    <!--年-->
                    <TextView
                            android:id="@+id/yearTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_color"/>
                    <!--月-->
                    <TextView
                            android:id="@+id/monthTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_color"/>
                    <!--日-->
                    <TextView
                            android:id="@+id/dayTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_color"/>
                    <!--时-->
                    <TextView
                            android:id="@+id/hourTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/line_color"/>
                    <!--分-->
                    <TextView
                            android:id="@+id/minTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"
                    android:layout_marginTop="20dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioTianMenDiHu"
                        android:text="天门地户"
                        android:checked="false"
                        android:textColor="@color/black_deep"
                        android:textSize="17sp"
                        android:layout_marginRight="10dp"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioYiXingHuanDou"
                        android:text="移星换斗"
                        android:checked="false"
                        android:textColor="@color/black_deep"
                        android:textSize="17sp"
                        android:layout_marginRight="10dp"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioYinPanKePan"
                        android:text="阴盘刻盘"
                        android:checked="false"
                        android:textColor="@color/black_deep"
                        android:textSize="17sp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>

            <!--自选局-->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自选局:"
                        android:textSize="15sp"
                        android:textColor="@color/black_deep"
                        android:layout_marginRight="30dp"/>
                <RelativeLayout
                        android:id="@+id/ziXuanJuRL"
                        android:layout_width="62dp"
                        android:layout_height="28dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/gray_stroken_white_bg_shape">
                    <TextView
                            android:id="@+id/ziXuanJuTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:text="无"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"/>
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_down"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textSize="15sp"
                        android:textColor="@color/black_deep"/>
                <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="62dp"
                        android:layout_height="28dp"
                        android:background="@drawable/gray_stroken_white_bg_shape"
                        android:textSize="15sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginRight="4dp"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/liuNianCheckBox"
                        android:text="流年"
                        android:checked="false"
                        android:textColor="@color/black_deep"
                        android:textSize="17sp"
                        android:layout_marginRight="2dp"/>
                <LinearLayout
                        android:layout_marginRight="5dp"
                        android:id="@+id/liuNianLL"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/gray_stroken_white_bg_shape">
                    <TextView
                            android:id="@+id/liuNianTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_deep"
                            android:textSize="15sp"
                            android:text="2015年"
                            android:layout_marginRight="6dp"/>
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_down"/>
                </LinearLayout>
                <TextView
                        android:id="@+id/nameQiMenPan"
                        android:layout_width="92dp"
                        android:layout_height="27dp"
                        android:textColor="@color/black_deep"
                        android:text="姓名奇门盘"
                        android:gravity="center"
                        android:background="@drawable/gray_stroken_white_bg_shape"
                        android:textSize="15sp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/resetTime"
                        android:layout_width="92dp"
                        android:layout_height="27dp"
                        android:background="@drawable/gray_stroken_white_bg_shape"
                        android:textColor="@color/black_deep"
                        android:text="重置时间"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginRight="37dp"/>
                <TextView
                        android:id="@+id/beginPaiPan"
                        android:layout_width="92dp"
                        android:layout_height="27dp"
                        android:textColor="@color/black_deep"
                        android:text="开始排盘"
                        android:gravity="center"
                        android:background="@drawable/gray_stroken_white_bg_shape"
                        android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>