<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#535042">
        <!--所有案例-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/allAnLiLL">
            <ImageView
                    android:id="@+id/allAnLiImageView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/search_post_sub_tab_selector"
                    android:layout_marginRight="6dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有案例"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"/>
        </LinearLayout>

        <!--最近一个月-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/oneMonthLL">
            <ImageView
                    android:id="@+id/oneMonthImageView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/search_post_sub_tab_selector"
                    android:layout_marginRight="6dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近一个月"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"/>
        </LinearLayout>

        <!--最近三个月-->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/threeMonthLL">
            <ImageView
                    android:id="@+id/threeMonthImageView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/search_post_sub_tab_selector"
                    android:layout_marginRight="6dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近三个月"
                    android:textColor="@color/common_white"
                    android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <com.example.YuCeClient.widget.RefreshListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:id="@+id/postList"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/choseAllLL"
                android:layout_marginRight="13dp">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#e8e8e8"
                    android:id="@+id/choseImageView"
                    android:layout_marginRight="15dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"
                    android:textColor="@color/common_black"
                    android:textSize="14sp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/delete"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除"
                android:gravity="center"
                android:textColor="@color/common_black"
                android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>